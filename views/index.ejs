<div class="author">
    <h1 class="author__heading">Hi, I am ReyD</h1>
     <p class="author__body">Web developer.</p>
</div>

<div class="img-container">
    <img src="/img/toilet.jpg" alt="There is a Flaw" class="hero-image" >
</div>



<section class="articles">
    <h2>Latest Posts</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %></span>
                <span class="article-list_date"><%= post.createdAt.toDateString()%>></span>
            </a>

        </li>

            <%})%>
    </ul>


    <% if(nextPage !== null){
        %>
        <a href="/?page=<%= nextPage%>" class="pagination">&lt;View Older Posts</a>
    <%
    }%>

</section>